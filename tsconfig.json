{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./src/",
    "rootDir": "./src/",
    "outDir": "./tmp",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es2016",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ]
}
